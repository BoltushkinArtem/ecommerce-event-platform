{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate":
          "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Kafka": {
    "BootstrapServers": "localhost:9094",
    "Producer": {
      "Acks": "All",
      "EnableIdempotence": true
    },
    "Topics": [
      {
        "EventKey": "OrderCreated",
        "Name": "orders.created"
      }
    ],
    "Retry": {
      "RetryCount": 5,
      "BaseDelayMs": 100
    }
  }
}